{
  "name": "use-form",
  "description": "use-form",
  "version": "1.0.12",
  "main": "./lib/index.js",
  "scripts": {
    "dev": "NODE_PATH=. webpack-dev-server",
    "dev:open": "NODE_PATH=. webpack-dev-serve --open",
    "clean": "./node_modules/.bin/rimraf lib dist",
    "build": "npm run clean && npm run build:tsc && npm run build:umd && npm run build:umd:min",
    "build:ts": "tsc -esModuleInterop true --moduleResolution node -t ES6 -m UMD --outDir ./lib --sourceMap false --jsx react ./src/index.ts",
    "build:tsc": "tsc -esModuleInterop true -m commonjs --outDir ./lib --sourceMap false --jsx react ./src/index.ts",
    "build:umd": "cross-env NODE_ENV=development webpack",
    "build:umd:min": "cross-env NODE_ENV=production webpack",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/borm/use-form.git"
  },
  "bugs": {
    "url": "https://github.com/borm/use-form/issues"
  },
  "author": "borm",
  "license": "MIT",
  "files": [
    "README.md",
    "lib",
    "dist"
  ],
  "keywords": [
    "react",
    "hooks",
    "form"
  ],
  "npmName": "use-form",
  "homepage": "https://github.com/borm/use-form#readme",
  "dependencies": {
    "nest-deep": "^1.3.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.8.6",
    "@babel/runtime": "^7.5.5",
    "@types/react": "^16.9.1",
    "babel-loader": "^8.0.6",
    "cross-env": "^5.2.0",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "rimraf": "^2.6.3",
    "ts-loader": "^6.0.4",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.39.1",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.8.0"
  },
  "peerDependencies": {
    "react": "^16.9.0",
    "react-dom": "^16.9.0"
  }
}
